<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewUserActivity" >

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Username:"
        android:textColor="#DF0101"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="User Information"
        android:textColor="#DF0101"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rGroupGender"
        android:layout_marginTop="47dp"
        android:layout_toLeftOf="@+id/editTextUserName"
        android:text="Age"
        android:textColor="#DF0101"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewAge"
        android:layout_alignBottom="@+id/textViewAge"
        android:layout_alignLeft="@+id/rGroupGender"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textViewSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewAge"
        android:layout_centerVertical="true"
        android:text="Sex:"
        android:textColor="#DF0101"
        android:textAppearance="?android:attr/textAppearanceMedium" />
<RadioGroup 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/textViewSex"
        android:layout_alignBottom="@+id/textViewSex"
        android:layout_alignLeft="@+id/textViewUserName"
    android:id="@+id/rGroupGender">

    <RadioButton
        android:id="@+id/radioButtonFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female" />
    <RadioButton
        android:id="@+id/radioButtonMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewSex"
        android:layout_alignBottom="@+id/textViewSex"
        android:layout_alignLeft="@+id/rGroupGender"
        android:text="Male" />
    
	</RadioGroup>
    

    
		
    	<Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewUserName"
        android:layout_marginBottom="30dp"
        android:background="#DF0101"
        android:text="Submit" />
</RelativeLayout>
