<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GlucoseActivity" >

    <TextView
        android:id="@+id/textViewHbA1c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="HbA1c"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#DF0101" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewGlucose"
        android:layout_alignLeft="@+id/textViewGlucose"
        android:layout_marginBottom="18dp"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewHbA1c"
        android:layout_marginRight="19dp"
        android:layout_marginTop="78dp"
        android:layout_toLeftOf="@+id/textViewGlucose"
        android:background="#DF0101"
        android:text="Submit" />

    <Button
        android:id="@+id/buttonViewChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonSubmit"
        android:layout_alignBottom="@+id/buttonSubmit"
        android:layout_alignLeft="@+id/textViewHbA1c"
        android:background="#DF0101"
        android:text="View Chart" />

    <EditText
        android:id="@+id/editTextGlucose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextHbA1c"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewGlucose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextGlucose"
        android:layout_alignRight="@+id/textViewHbA1c"
        android:text="Glucose"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#DF0101" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonViewChart"
        android:layout_alignBottom="@+id/buttonViewChart"
        android:layout_alignParentRight="true"
        android:background="#DF0101"
        android:text="Cancel" />

    <EditText
        android:id="@+id/editTextHbA1c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextGlucose"
        android:layout_below="@+id/textViewHbA1c"
        android:ems="10"
        android:inputType="numberDecimal" />

</RelativeLayout>
