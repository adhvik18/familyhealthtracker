<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.familyhealthtracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.familyhealthtracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.familyhealthtracker.NewUserActivity"
            android:label="@string/title_activity_new_user"
            android:parentActivityName="com.example.familyhealthtracker.MainActivity" >
        </activity>
        <activity
            android:name="com.example.familyhealthtracker.DetailUserName"
            android:label="@string/title_activity_detail_user_name" >
        </activity>
        <activity
            android:name="com.example.familyhealthtracker.BpActivity"
            android:label="@string/title_activity_bp" >
        </activity>
        <activity
            android:name="com.example.familyhealthtracker.Glucose"
            android:label="@string/title_activity_glucose" >
        </activity>
        <activity
            android:name="com.example.familyhealthtracker.HeartRate"
            android:label="@string/title_activity_heart_rate" >
        </activity>
        <activity
            android:name="com.example.familyhealthtracker.BodyStats"
            android:label="@string/title_activity_body_stats" >
        </activity>
        <activity
            android:name="com.example.familyhealthtracker.ExistingUserActivity"
            android:label="@string/title_activity_existing_user" >
        </activity>
        <activity
            android:name="com.example.familyhealthtracker.ChartActivity"
            android:label="@string/title_activity_chart" >
        </activity>
        <activity
            android:name="com.example.familyhealthtracker.ReminderActivity"
            android:label="@string/title_activity_reminder" >
        </activity>
        <activity
            android:name="com.example.familyhealthtracker.service.ScheduleClient"
            android:label="@string/title_activity_schedule_client" >
        </activity>
        <service
            android:name="com.example.familyhealthtracker.service.ScheduleService"
            android:label="@string/title_activity_schedule_service" >
        </service>
        <activity
            android:name="com.example.familyhealthtracker.service.AlarmTask"
            android:label="@string/title_activity_alarm_task" >
        </activity>
        <service
            android:name="com.example.familyhealthtracker.service.NotifyService"
            android:label="@string/title_activity_notify_service" >
        </service>
    </application>

</manifest>
